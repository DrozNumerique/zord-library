{
	"extension": {
		"Word2007": "docx",
		"ODText": "odt",
		"RTF": "rtf",
		"HTML": "html",
		"PDF": "pdf"
	},
	"layout": {
		"default": {
			"height": "21cm",
			"width": "15cm",
			"margin": {
				"top": "2cm",
				"bottom": "2cm",
				"left": "2cm",
				"right": "2cm"
			}
		}
	},
	"image": {
		"default": {
			"alignment": "center",
			"margin": "0.5cm",
			"scale": "fit"
		}
	},
	"table": {
		"default": {
			"alignment": "center",
			"layout": "fixed",
			"width": "10cm",
			"unit": "dxa",
			"borderSize": "0.4pt"
		}
	},
	"row": {
		"default": {
			"cantSplit": true
		}
	},
	"cell": {
		"default": {
			"valign": "center"
		}
	},
	"font": {
		"*": {
			"name": "Times new roman",
			"size": 10
		},
		"titlePart[collection-num]": {
			"size": 12
		},
		"titlePart[sub]": {
			"size": 12
		},
		"docTitle, docAuthor": {
			"size": 18
		},
		"*@note, pb": {
			"size": 8
		},
		"*@header, *@footer": {
			"size": 9
		},
		"head": {
			"size": 16
		},
		"head.#sectiontitle": {
			"size": 13
		},
		"hi.sup": {
			"superScript": true
		},
		"hi.sub": {
			"subScript": true
		},
		"hi.sc": {
			"smallCaps": true
		},
		"hi.b": {
			"bold": true
		},
		"hi.i, stage, emph": {
			"italic": true
		},
		"l.margin:before": {
			"size": 8
		},
		"ab[ornament]": {
			"name": "Courier New"
		}
	},
	"paragraph": {
		"names": [
			"p",
			"l",
			"bibl",
			"speaker",
			"stage",
			"item",
			"emph",
			"label",
			"titlePart",
			"caption",
			"table",
			"td",
			"quote",
			"head",
			"ab"
		],
		"*": {
			"contextualSpacing": true
		},
		"*@text": {
			"alignment": "both"
		},
		"*@header, *@footer, *.center, *.#center, graphic, titlePage, speaker, caption": {
			"alignment": "center"
		},
		"*.left, *.#left, td": {
			"alignment": "left"
		},
		"*.right, *.#right": {
			"alignment": "right"
		},
		"titlePart": {
			"space": {
				"after": "0.5cm"
			}
		},
		"argument.rights": {
			"space": {
				"before": "0.5cm"
			}
		},
		"head": {
			"alignment": "center",
			"space": {
				"before": "0.5cm",
				"after": "0.5cm"
			}
		},
		"div > p, quote > p, l": {
			"indentation": {
				"firstLine": "1cm"
			}
		},
		"div > p.center, div > p.#center": {
			"indentation": {
				"firstLine": 0
			}
		},
		"epigraph": {
			"alignment": "right",
			"indentation": {
				"left": "3cm"
			},
			"space": {
				"before": "0.25cm",
				"after": "0.5cm"
			}
		},
		"speaker": {
			"space": {
				"before": "0.25cm"
			}
		},
		"stage": {
			"space": {
				"before": "0.25cm",
				"after": "0.25cm"
			}
		},
		"quote": {
			"indentation": {
				"left": "1cm"
			},
			"space": {
				"before": "0.25cm",
				"after": "0.25cm"
			}
		},
		"item item": {
			"indentation": {
				"left": "1cm"
			}
		},
		"ab[ornament]": {
			"space": {
				"before": "0.25cm",
				"after": "0.25cm"
			}
		}
	},
	"html": [
		"br",
		"table",
		"tr",
		"td",
		"caption"
	]
}
